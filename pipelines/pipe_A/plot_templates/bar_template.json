{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "values": "<DVC_METRIC_DATA>"
    },
    "title": "<DVC_METRIC_TITLE>",
    "width": 300,
    "height": 300,
    "mark": {
        "type": "bar"
    },
    "encoding": {
        "x": {
            "field": "<DVC_METRIC_X>",
            "type": "nominal",
            "title": "<DVC_METRIC_X_LABEL>"
        },
        "y": {
            "field": "<DVC_METRIC_Y>",
            "type": "quantitative",
            "title": "<DVC_METRIC_Y_LABEL>",
            "scale": {
                "zero": false
            }
        },
        "xOffset":{
            "field": "rev"
        },
        "color": {
            "field": "rev",
            "type": "nominal"
        }
    }
}