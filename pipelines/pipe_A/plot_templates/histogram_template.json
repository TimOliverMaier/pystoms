{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "values": "<DVC_METRIC_DATA>"
    },
    "title": "<DVC_METRIC_TITLE>",
    "width": 300,
    "height": 300,
    "mark": {
        "type": "bar"
    },
    "transform": [
        {
            "groupby": ["feature_id"]
        }
    ],
    "encoding": {
        "x": {
            "bin": true,
            "field": "<DVC_METRIC_Y>",
            "title": "<DVC_METRIC_Y_LABEL>"
        },
        "y": {
            "aggregate":"count",
            "title": "Count"
        },
        "color": {
            "field": "feature_id",
            "type": "nominal"
        }
    }
}